@page "/build"
@inject BlazorBattles50.Client.Services.IBananaService BananaService
@inject BlazorBattles50.Client.Services.IUnitService UnitService
@inject IToastService ToastService
@attribute [Authorize]
<h3>Build</h3>

<div class="form-group">
    <select @bind="selectedUnitId" class="form-control">
        @foreach (var unit in UnitService.Units){
            <option value="@unit.Id">@unit.Title // @unit.BananaCost Bananas</option>
        }

        
    </select>
</div>
<button @onclick="BuildUnit" class="btn btn-primary">Build</button>

@if(needMoreBananas){
    <div class="validation-message">
        Not enough bananas! :(
    </div>
}

@code {
    int selectedUnitId = 1;
    bool needMoreBananas = false;
    public void BuildUnit(){
        BlazorBattles50.Shared.Unit selectUnit=
            UnitService.Units.FirstOrDefault(unit => unit.Id == selectedUnitId);
        if(selectUnit.BananaCost>BananaService.Bananas){
            needMoreBananas = true;
            ToastService.ShowError("Not enough bananas!", ":(");
            return;
        }

        needMoreBananas = false;

        BananaService.EatBananas(selectUnit.BananaCost);
        UnitService.AddUnit(selectUnit.Id);

    }

}
